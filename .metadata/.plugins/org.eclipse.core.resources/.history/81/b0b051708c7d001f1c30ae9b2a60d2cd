package Day_1;

public class MethodsWithReturnType {
	
	//1.Write a method that takes an integer array and returns the sum of all elements.
	
	public int sumOfArray(int numbers[] ) {
		int sum=0;
		for(int i =0;i<numbers.length;i++) {
			System.out.println("before:"+i);
			sum = sum+numbers[i];
			System.out.println("After:"+i);
		}
		return sum;
	}

	public static void main(String[] args) {
		
		
		MethodsWithReturnType arr = new MethodsWithReturnType();
		int[] numbers = {1,2,3,4,5};
		int sum = arr.sumOfArray(numbers);
		System.out.println("Sum of array elements:"+ sum);

	}

}
